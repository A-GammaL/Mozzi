<a name="l00036"></a>00036 <span class="keyword">const</span> <span class="keywordtype">unsigned</span> <span class="keywordtype">int</span> Ead::ENVELOPE_MAX    = (Q7n8_FIX1 - ENVELOPE_RANGE);
<a name="l00037"></a>00037
<a name="l00038"></a>00038
<a name="l00039"></a>00039 <span class="comment">/* unsigned char Ead::getcState()</span>
<a name="l00040"></a>00040 <span class="comment">{</span>
<a name="l00041"></a>00041 <span class="comment">        return cstate;</span>
<a name="l00042"></a>00042 <span class="comment">} */</span>
<a name="l00043"></a>00043
<a name="l00044"></a>00044 <span class="comment">/*</span>
<a name="l00045"></a>00045 <span class="comment">// from http://people.ece.cornell.edu/land/courses/ece4760/Math/GCC644/Karplus_Strong/Karplus_Strong_2_macro.c</span>
<a name="l00046"></a>00046 <span class="comment">// attack and decay constants</span>
<a name="l00047"></a>00047 <span class="comment">volatile unsigned char rise_1 ;</span>
<a name="l00048"></a>00048 <span class="comment">volatile unsigned char fall_1 ;</span>
<a name="l00049"></a>00049 <span class="comment"></span>
<a name="l00050"></a>00050 <span class="comment">   // rise and decay SHIFT factors  -- bigger is slower -- max value is 8</span>
<a name="l00051"></a>00051 <span class="comment">   fall_1 = 5 ;</span>
<a name="l00052"></a>00052 <span class="comment">   rise_1 = 1 ;</span>
<a name="l00053"></a>00053 <span class="comment"></span>
<a name="l00054"></a>00054 <span class="comment"> // amplitude waveforms = attack * decay waveforms</span>
<a name="l00055"></a>00055 <span class="comment">volatile int amp_1;</span>
<a name="l00056"></a>00056 <span class="comment">// attack and decay waveforms</span>
<a name="l00057"></a>00057 <span class="comment">volatile int amp_rise_1 ;</span>
<a name="l00058"></a>00058 <span class="comment">volatile int amp_fall_1 ;</span>
<a name="l00059"></a>00059 <span class="comment"></span>
<a name="l00060"></a>00060 <span class="comment">start:</span>
<a name="l00061"></a>00061 <span class="comment">                amp_fall_1 = max_amp;</span>
<a name="l00062"></a>00062 <span class="comment">                amp_rise_1 = max_amp ;</span>
<a name="l00063"></a>00063 <span class="comment"></span>
<a name="l00064"></a>00064 <span class="comment">// compute drive exponential attack and decay of amplitude</span>
<a name="l00065"></a>00065 <span class="comment">// the (time &amp; 0x0ff) slows down the decay computation by 256 times</span>
<a name="l00066"></a>00066 <span class="comment">        if ((time &amp; 0x0ff) == 0) begin</span>
<a name="l00067"></a>00067 <span class="comment">                amp_fall_1 = amp_fall_1 - (amp_fall_1&gt;&gt;fall_1) ;</span>
<a name="l00068"></a>00068 <span class="comment">                amp_rise_1 = amp_rise_1 - (amp_rise_1&gt;&gt;rise_1);</span>
<a name="l00069"></a>00069 <span class="comment">        end</span>
<a name="l00070"></a>00070 <span class="comment"></span>
<a name="l00071"></a>00071 <span class="comment">        // form (1-exp(-t/tau)) for the attack phase</span>
<a name="l00072"></a>00072 <span class="comment">        // product of rise and fall exponentials is the amplitude envelope</span>
<a name="l00073"></a>00073 <span class="comment">        amp_1 = ((max_amp - amp_rise_1)&gt;&gt;8) * (amp_fall_1&gt;&gt;8) ;</span>
<a name="l00074"></a>00074 <span class="comment">        */</span>
